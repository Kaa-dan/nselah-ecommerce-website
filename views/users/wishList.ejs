<%- include ('../layouts/userHeader.ejs') %>
    <!-- Shop Cart Section Begin -->
    <section class="shop-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(wishProduct){ %>
                                    <% if(wishProduct.item.length>0){ %>
                              <% for(let key of wishProduct.item){ %>
                                <tr>
                                    <td class="cart__product__item">
                                       <a href="/productDetail?id=<%-key.productId._id%>"><img height="50rem" width="50rem" src="/uploads/<%=key.productId.image[0] %>"alt=""></a> 
                                        <div class="cart__product__item__title">
                                            <h6><%=key.productId.name%></h6>
                                     
                                        </div>
                                    </td>
                                    <td class="cart__price">â‚¹ <%=key.productId.price%> </td>
                                    <td class="cart__quantity">
                                        <div  >
                                          <a href="/addToCart?id=<%-key.productId._id%>" class="cart-btn"><button><span class="icon_bag_alt"></span> Add to cart</button></a>
                                        </div>
                                    </td>
                                    <td class="cart__total"><div  >
                                      <a href="/deleteFromWishList?id=<%-key.productId._id%>" class="cart-btn"><button><span class="icon_heart_alt"></span>  Delete</button></a>
                                    </div></td>
                                    <td class="cart__close"></span></td>
                                </tr>
                                <% } %>
                                <% } %>
                                <% } %>
                              
                                
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                  
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    
                </div>
            </div>
            
        </div>
    </section>
    <!-- Shop Cart Section End -->

    <%- include ('../layouts/userfooter.ejs') %>